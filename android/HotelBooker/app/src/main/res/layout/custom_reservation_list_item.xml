<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardStyle.Home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/state_list_selectable_rect_green"
    android:orientation="vertical">

    <LinearLayout
        style="@style/CardStyle.Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reservation_room_name"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_margin="@dimen/content_spacing_horizontal"
            android:layout_weight="1"
            android:text="Room Name"
            android:textColor="@color/md_black_1000"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reservation_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content_spacing_horizontal"
                android:text="Status Rezerwacji"
                android:textColor="@color/md_green_800"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/reservation_status"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/status"
                    android:textColor="@color/md_black_1000"
                    android:textSize="12sp"
                    android:layout_width="0dp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>