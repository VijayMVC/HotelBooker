<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardStyle.Home"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/state_list_selectable_rect_green"
    android:orientation="vertical">

    <LinearLayout
        style="@style/CardStyle.Home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/reservation_room_name"
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:layout_margin="@dimen/content_spacing_horizontal"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:text="Room Name"
            android:textColor="@color/md_black_1000"
            android:textSize="20sp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <TextView
                android:id="@+id/reservation_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/content_spacing_horizontal"
                android:text="Cena"
                android:textColor="@color/md_green_800"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:text="Ocena:"
                    android:textColor="@color/md_green_900"
                    android:textSize="12sp"                    />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/content_spacing_horizontal"
                    android:layout_weight="1"
                    android:text="4 / 5"
                    android:textColor="@color/md_green_900"
                    android:textSize="12sp"
                    />
            </LinearLayout>


            </LinearLayout>

      </LinearLayout>


</LinearLayout>